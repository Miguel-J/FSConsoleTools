<view>
    <columns>
        <group name="data" numcolumns="12">
{% set order = 100 %}
{% for key, column in fsc.getItemsFromTableOrdered() %}
{% set order = 100 + (key*10) %}
{% if column['default'] starts with 'nextval' %}
            <column name="code" display="none" order="{{ order }}">
                <widget type="text" fieldname="{{ column['name'] }}" icon="fa-object-group" required="true" />
            </column>
{% endif %}
{% if column['type'] starts with 'date' %}
            <column name="trans-{{ column['name'] }}" numcolumns="3" order="{{ order }}">
                <widget type="{{ fsc.parseType(column['type'], 'view') }}" fieldname="{{ column['name'] }}" />
            </column>
{% elseif column['type'] starts with 'bool' %}
            <column name="trans-{{ column['name'] }}" numcolumns="3" order="{{ order }}">
                <widget type="{{ fsc.parseType(column['type'], 'view') }}" fieldname="{{ column['name'] }}" />
            </column>
{% else %}
{% if column['type'] starts with 'number' %}{% set decimal = ' decimal="2"' %}{% else %}{% set decimal = '' %}{% endif %}
            <column name="trans-{{ column['name'] }}" numcolumns="3" order="{{ order }}">
                <widget type="{{ fsc.parseType(column['type'], 'view')|replace({'number-decimal': 'number'}) }}"{{ decimal|raw }} fieldname="{{ column['name'] }}"{% if column['is_nullable'] == 'NO' %} required="true"{% endif %} />
            </column>
{% endif %}
{% endfor %}
        </group>
    </columns>
</view>