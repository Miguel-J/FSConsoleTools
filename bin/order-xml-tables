const DS = DIRECTORY_SEPARATOR;

define('FS_FOLDER', __DIR__ . DS . '..' . DS . '..' . DS . '..' . DS . '..' . DS);

/** @noinspection PhpIncludeInspection */
require_once FS_FOLDER . 'vendor' . DS . 'autoload.php';

$order = new FacturaScriptsUtils\Console\Command\OrderXmlTables();
$srcPath = FS_FOLDER . 'Core' . DS . 'Table' . DS;
$order->setFolderSrcPath($srcPath);
$order->setFolderDstPath($srcPath);
$order->setTagName('name');
$exitCode = $order->run();

exit($exitCode);